{
  "name": "@acme/extension",
  "displayName": "Chrome Extension Template",
  "version": "0.0.1",
  "description": "A Chrome extension template with Plasmo, React, TailwindCSS, and tRPC integration",
  "author": "Your Name",
  "scripts": {
    "dev": "pnpm with-dev-env plasmo dev",
    "build": "pnpm with-prod-env plasmo build",
    "build-firefox": "pnpm with-prod-env plasmo build --target=firefox",
    "package": "pnpm with-prod-env plasmo package",
    "clean": "git clean -xdf .next .turbo node_modules .plasmo",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "with-dev-env": "dotenv -e ../../.env -e ../../.env.local --",
    "with-prod-env": "dotenv -e ../../.env.production -e ../../.env --",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@acme/api": "workspace:*",
    "@acme/lib": "workspace:*",
    "@acme/ui": "workspace:*",
    "@ai-sdk/anthropic": "^1.0.10",
    "@plasmohq/messaging": "^0.6.2",
    "@plasmohq/storage": "^1.11.0",
    "@trpc/client": "11.0.0-rc.364",
    "ai": "^4.1.11",
    "plasmo": "^0.89.2",
    "prettier": "^3.3.3",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "superjson": "2.2.3",
    "webextension-polyfill": "^0.11.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@acme/db": "workspace:*",
    "@acme/eslint-config": "workspace:*",
    "@acme/prettier-config": "workspace:*",
    "@acme/tailwind-config": "workspace:*",
    "@acme/tsconfig": "workspace:*",
    "@types/chrome": "^0.0.271",
    "@types/node": "^20.14.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/webextension-polyfill": "^0.10.7",
    "autoprefixer": "10.4.13",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.8.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.7",
    "typescript": "^5.4.5"
  },
  "prettier": "@acme/prettier-config",
  "manifest": {
    "host_permissions": ["<all_urls>"],
    "permissions": ["storage", "debugger", "scripting", "webRequest"]
  }
}
